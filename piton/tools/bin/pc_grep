# This script parses out individual spc and 
# thread traces from a simulation trace for 
# debugging purposes
# Author: mmckeown

import sys, os
import re

def usage():
    print "Usage: " + re.sub(",.*", "", os.path.basename(sys.argv[0])) + " <sim log> [additional sim logs]"

def main():
    # Check cmd args
    if len(sys.argv) < 2 :
        usage ()
        sys.exit(1)
    
    # Parse cmd args
    simlogs = sys.argv[1:];

    # Check cmd args
    for simlog in simlogs :
        if not os.path.isfile(simlog):
            print "Error: Simulation log '" + simlog + "' does not exist."
            sys.exit(1)
        if simlog[-4:] != ".log" :
            print "Error: Simulation log '" + simlog + "' does not have the .log suffix...invalid input"
            sys.exit(1)

    # PC logs
    simpclogs = [(log[:-4] + "_pc.log") for log in simlogs]

    # Grep out PC updated statements
    for i in range(len(simlogs)):
        os.system("grep \":pc-updated ->\" " + simlogs[i] + " > " + simpclogs[i])

    # Get the maximum number of spcs and threads
    max_spc = 0
    max_thr = 0
    for pclog in simpclogs:
        fp = open(pclog, "r")
        for line in fp :
            match = re.match("\d+:pc-updated -> spc\((\d+)\) thread\((\d+)\) window\(\d+\) val = [0-9A-Fa-f]+", 
                             line)
            if match is None :
                print "Error: PC log '" + pclog + "' either has no PCs or invalid simulation log input"
                fp.close()
                sys.exit(1)
            max_spc = max(max_spc, int(match.group(1)))
            max_thr = max(max_thr, int(match.group(2)))
        fp.close()
    
    # Generate individual spc and thread traces
    for pclog in simpclogs:
        for spc in range(max_spc + 1) :
            spclog = pclog[:-4] + "_spc" + str(spc) + ".log"
            os.system("grep \":pc-updated -> spc(" + str(spc) + ")\" " + pclog + " > " + spclog)
            spclog_stripped = spclog[:-4] + ".stripped.log"
            fp_spc = open(spclog, "r")
            fp_spc_strpd = open(spclog_stripped, "w")
            for line in fp_spc :
                match = re.match("\d+:(.*)", line)
                if not match is None :
                    fp_spc_strpd.write(match.group(1) + "\n")
            fp_spc_strpd.close()
            fp_spc.close()
            for thr in range(max_thr + 1) :
                thrlog = spclog[:-4] + "_thr" + str(thr) + ".log"
                os.system("grep \":pc-updated -> spc(" + str(spc) + ") thread(" + str(thr) + ")\" " + \
                          spclog + " > " + thrlog)
                thrlog_stripped = thrlog[:-4] + ".stripped.log"
                fp_thr = open(thrlog, "r")
                fp_thr_strpd = open(thrlog_stripped, "w")
                for line in fp_thr :
                    match = re.match("\d+:(.*)", line)
                    if not match is None :
                        fp_thr_strpd.write(match.group(1) + "\n")
                fp_thr_strpd.close()
                fp_thr.close()

if __name__ == "__main__" :
    main() 
