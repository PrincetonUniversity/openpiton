// Tesbench configuration file for the ifu_esl_stsm environment

<ifu_esl_stsm>
    -model=ifu_esl_stsm
    -toplevel=ifu_esl_stsm_top
    -flist=$DV_ROOT/design/chip/tile/sparc/ifu/rtl/Flist.ifu_esl_stsm
    -flist=$DV_ROOT/verif/env/ifu_esl_stsm/ifu_esl_stsm.flist
    -flist=$DV_ROOT/verif/env/test_infrstrct/test_infrstrct_include.flist
    -env_base=$DV_ROOT/verif/env/ifu_esl_stsm
    -sim_build_args=+incdir+$DV_ROOT/verif/env/test_infrstrct/
    -vcs_build_args=+notimingcheck
    -vcs_build_args=+nospecify
    -vcs_build_args=+nbaopt
    -vcs_build_args=-Xstrict=1 -notice
    -sim_run_args=+test_cases_path=$DV_ROOT/verif/env/ifu_esl_stsm/test_cases/
    -vcs_cm_args=line+tgl+cond+branch+fsm
</ifu_esl_stsm>
