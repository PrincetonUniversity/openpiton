            'injobq!',
            'interactive!',
            'max_cycle=i',
            'midas_args=s@',
            'midas_only!',
            'midas_use_tgseed!',
            'model=s',
            'model_dir=s',
            'msm_build!',
            'msm_build_args=s@',
            'msm_run!',
            'network_config=s',
            'ncv_build!',
            'ncv_build_args=s@',
            'ncv_run!',
            'overwrite!',
            'pal_use_tgseed!',
            'parallel!',
            'post_process_cmd=s@',
            'pre_process_cmd=s@',
            'reg_count=i',
            'regress!',
            'regress_date=s',
            'regress_id=s',
            'regress_time=s',
            'report!',
            'rerun!',
            'result_dir=s',
            'rtl_timeout=i',
            'run_diag_pl!',
