            'sim_build_args=s@',
            'other_sim_build_cmd=s',
            'other_sim_run!',
            'sim_run_args=s@',
            'other_sim_run_cmd=s',
            'sim_type=s',
            'sim_q_command=s',
            'sims_config=s',
            'simslog!',
            'simslog_name=s',
            'sjm!',
            'sjm_diag_name=s',
            'sjm_diag_path=s',
            'sjm_diag_root=s@',
            'stub_mask=s',
            'sys=s',
